<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stone.lfernandosantos.storewars.views.CardDataActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CartÃ£o"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/edtCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="16"
                android:inputType="number"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="102dp" />

            <EditText
                android:id="@+id/edtNomeCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapCharacters"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="119dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vencimento"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="174dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <EditText
                android:ems="2"
                android:maxLength="2"
                android:id="@+id/edtCardMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"/>

                <TextView
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:ems="4"
                    android:maxLength="4"
                    android:inputType="number"
                    android:id="@+id/edtCardYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CVV"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="249dp" />

            <EditText
                android:maxLength="5"
                android:id="@+id/edtCVVCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="number"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="277dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total da compra"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="352dp" />

        <Button
            android:id="@+id/btnSaveCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="411dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
